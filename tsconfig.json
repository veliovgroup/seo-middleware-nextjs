{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM"],
    "verbatimModuleSyntax": true,
    "noEmitOnError": true
  },
  "include": ["src/index.ts"]
}